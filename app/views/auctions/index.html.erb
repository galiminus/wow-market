<div class="container">
  <h1 class="center-align">WoW Market</h1>



  <%= render partial: "options" %>
  
  <% if !params[:language].blank? && !params[:region].blank? && !params[:realm].blank? %>

  <div class="row">
    <% if @id >= 20 %>
    <button class="btn waves-effect waves-light col s5" type="submit" name="id" value="<%=@id-20%>" form="main_form">
      Previous 20
    </button>
    <% else %>
    <label class="col s5"></label>
    <% end %>
    
    <label class="col s2"></label>
    
    <button class="btn waves-effect waves-light col s5" type="submit" name="id" value="<%=@id+20%>" form="main_form">
      Next 20
    </button>
  </div>

  
  <div class="row">
    <h4 ><%=@id%>-<%=@id+20%> on <%=@count%></label>
  </div>

  
  <div class="row">
    <table class="grey darken-3" id="auctions_table" class="bordered highlight s12 l12">
      <thead>
        <tr>
          <th>Item</th>
          <th>Owner</th>
	  <th>Buyout</th>
	  <th>Quantity</th>
        </tr>
      </thead>
      <tbody>
        <% @auctions.each do |auction| %>
        <tr>
          <td><a href="https://www.wowhead.com/item=<%=auction[:item]%>" data-wowhead="item=<%=auction[:item]%>"></a></td>
          <td><%= auction[:owner] %></td>
          <td><%= auction[:buyout] / 1000%></td>
          <td><%= auction[:quantity] %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% end %>
  
</div>

