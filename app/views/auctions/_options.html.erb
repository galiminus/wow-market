  <div class="row">
    <form action="<%= root_path %>" method="get" id="main_form">
      <div class="input-field col s4">
	<%= select_tag :language, options_for_select(@locales, params[:language]), include_blank: "Choose your language" %>
        <label>Language</label>
      </div>
      
      <div class="input-field col s4">
        <select name="region" id="region-select">
          <option value="">Choose your region</option>
          <% @realms.each do |region| %>
          <option value="<%= region[0] %>"><%= region[0] %></option>
          <% end %>
          </select>
        <label>Region</label>
      </div>
      
      <div class="input-field col s4">
        <select name="realm" id="realm-select">
          <option value="">Choose your realm</option>
        </select>
        <label>Realm</label>
      </div>
      
      <div class="row">
        <!-- <label class="col s1"></label> -->
	<button class="btn waves-effect waves-light" type="submit">Submit
	  <i class="material-icons right">send</i>
	</button>
      </div>
    </form>
      
  </div>

